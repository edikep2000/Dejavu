@model Dejavu.Common.ViewModels.ProgramEditorModel

@{
    ViewBag.Title = "Edit Program";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="padding">
    <div class="full col-sm-9">
        <div class="panel panel-default">
    <div class="panel-heading">
        <h4>
            Edit Program
        </h4>
    </div>
    
            <div class="panel-body">
                @Html.Partial("_validationSummary")
                @using (Html.BeginForm("Edit", "Program", FormMethod.Post, new{}))
                {
                   
                    @Html.Partial("_programEditorPartial")
           
                    <button type="submit" class="btn btn-primary">
                        Save Changes <i class="glyphicon glyphicon-save"></i>
                    </button>
            
                }
            </div>
</div>
    </div>
</div>




@section scripts
{
    <script type="text/javascript">
        function onUpload(e) {
            var files = e.files;

            $.each(files, function () {
                if (this.size > 15 * 1024 * 1024) {
                    alert(this.name + " is too big!");
                    e.preventDefault(); // This cancels the upload for the file
                }
            });
        }
    </script>
}