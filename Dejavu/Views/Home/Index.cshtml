@{
    ViewBag.Title = "Welcome to DejaVu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Dejavu.Common.ViewModels.ShareModel
<div class="padding">
    <div class="full col-sm-9">
        <div class="row">
            <div class="col-sm-5">
                <div class="panel panel-default">
                    <div class="panel-thumbnail">
                        <img src="~/img/bg_5.jpg" class="img-responsive"/>
                    </div>
                    <div class="panel-body">
                        <p class="lead">Dejavu</p>
                        <p>@Model.ProgramCount Programs, @Model.TestimonyCount Testimonies</p>
                    </div>
                </div>
                
                <div class="panel panel-default">
                    <div class="panel-heading"><em>"...for they overcame by the blood of the lamb and by the word of their testimony"</em></div>
                    <div class="panel-body">
                        <p>
                            WALK THROUGH THIS HALLS AND REMEMBER WHAT GLORY YOU EXPERIENCED. REMEMBER AND TESTIFY!!
                        </p>
                        <p>
                            Relive those awesome moments, those turning points where you saw God show up and then everything changed! 
                            Relive those great meetings where reality TRANSFORMED.
                            <br/>
                          <span> <strong class="text-primary"> Testify!!! </strong> </span>
                        </p>
                    </div>
                </div>

            </div>
            <div class="col-md-7">
                @Html.Awe().AjaxList("getHomePrograms").Url(Url.Action("GetProgramsForHome","ProgramAjaxList")).MoreText("More...").CssClass("col-md-7").Parent("txtSearch", "search").LoadOnParentChange(true)               
            </div>
        </div>
    </div>
</div>

