@using System.Threading
@using Dejavu.Common.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
     <link href="@Url.Content("~/css/themes/gui3/AwesomeMvc.css")" rel="stylesheet" />
    <link href="//code.jquery.com/ui/1.11.1/themes/start/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="//code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>
	<link href="@Url.Content("~/Content/kendo/2014.3.1411/kendo.common-bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2014.3.1411/kendo.mobile.all.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2014.3.1411/kendo.dataviz.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2014.3.1411/kendo.bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/kendo/2014.3.1411/kendo.dataviz.bootstrap.min.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/kendo/2014.3.1411/jszip.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2014.3.1411/kendo.all.min.js")"></script>
	<script src="@Url.Content("~/Scripts/kendo/2014.3.1411/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>
    <script src="~/Scripts/moment.min.js"></script>
</head>
<body>
    <div class="wrapper">
        <div class="box">
            
            <div class="column col-sm-12 col-xs-12" id="main">
                <div class="navbar navbar-blue navbar-static-top">
                    <div class="navbar-header">
                       
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand logo">dejavu</a>
                          <form class="navbar-form navbar-left hidden-xs hidden-sm hidden-print">
                            <div class="input-group input-group-sm" style="max-width: 360px;">
                                <input class="form-control" placeholder="Find Event" name="txtSearch" id="srch-term" type="text">
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
 
                  
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/js/bootstrap.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/5.1/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/js/AwesomeMvc.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/Utils.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/Utils.js")" type="text/javascript"></script>
    
    @RenderSection("scripts", required: false)
    
         <script>
             var root = '@Url.Content("~")';
             var popupMod = 'bootstrap';
             var isMobileOrTablet = '@Utils.IsMobileOrTablet()' == "True";
            var dateFormat = '@AweUtil.ConvertTojQueryDateFormat(Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern)';
             init(dateFormat, isMobileOrTablet);
             $(function () { documentReady(root, popupMod); });
             $.fn.bootstrapBtn = $.fn.button.noConflict();
        </script>
  
</body>
</html>
